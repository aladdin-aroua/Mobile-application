<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/update_objectif"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/icon_objectifs"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <TextView

                android:layout_marginTop="30dp"
                android:id="@+id/nom_objectif"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:id="@+id/delete_objrctif"
                android:visibility="visible"
                android:background="@drawable/delete3"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/solde_econimise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/solde_objectif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="170dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_objectif"
            android:layout_width="300dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            />

        <AutoCompleteTextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"/>
    </LinearLayout>


</android.support.v7.widget.CardView>